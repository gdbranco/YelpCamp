<% include ../partials/header %>
<% include ../partials/flash-messages %>
<div class="container">
                <h1 class="text-center">Edit comment</h1>
                <div class="center">
                        <form action="/campgrounds/<%=camp._id%>/comments/<%=comment._id%>?_method=PUT" method="post">
                                <div class="form-group row">
                                      <div class="col-sm-12">
                                        <textarea type="text" class="form-control" id="inputCommentText" name="comment[text]"><%=comment.text%></textarea>
                                      </div>
                                </div>
                                <div class="form-group">
                                <button type="submit" class="btn btn-success btn-block">Update</button>
                                </div>
                        </form>
                        <div class="form-group form-inline">
                                <a href="/campgrounds/<%=camp._id%>">Go Back</a>        
                        </div>
                </div>
</div>

<% include ../partials/footer %>