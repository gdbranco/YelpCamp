<% include ../partials/header %>
<% include ../partials/flash-messages %>
<div class="container">
                <h1 class="text-center">Add a new campground</h1>
                <div class="center">
                        <form action="/campgrounds" method="post">
                                <div class="form-group row">
                                      <label for="inputCampName" class="col-sm-2 col-form-label">Name</label>
                                      <div class="col-sm-10">
                                        <input type="text" class="form-control" id="inputCampName" name="camp[name]" placeholder="Insert Campground name">
                                      </div>
                                </div>
                                <div class="form-group row">
                                      <label for="inputCampPrice" class="col-sm-2 col-form-label">Price</label>
                                      <div class="col-sm-10">
                                        <input type="Number" step="0.01" class="form-control" id="inputCampPrice" name="camp[price]" placeholder="Insert Campground price per night">
                                      </div>
                                </div>
                                <div class="form-group row">
                                    <label for="location" class="col-sm-2 col-form-label">Location</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="text" name="camp[location]" id="location" placeholder="Yosemite National Park, CA">
                                    </div>
                                </div>
                                <div class="form-group row">
                                      <label for="inputCampImage" class="col-sm-2 col-form-label">Image</label>
                                      <div class="col-sm-10">
                                        <input type="text" class="form-control" id="inputCampImage" name="camp[image]" placeholder="Insert Campground image url">
                                      </div>
                                </div>
                                <div class="form-group row">
                                      <label for="inputCampDesc" class="col-sm-2 col-form-label">Description</label>
                                      <div class="col-sm-10">
                                        <input type="text" class="form-control" id="inputCampDesc" name="camp[desc]" placeholder="Insert Campground description url">
                                      </div>
                                </div>
                                <div class="form-group">
                                <button type="submit" class="btn btn-success btn-block">Add</button>
                                </div>
                        </form>
                        <div class="form-group form-inline">
                                <a href="/campgrounds">Go Back</a>        
                        </div>
                        
                </div>
</div>

<% include ../partials/footer %>